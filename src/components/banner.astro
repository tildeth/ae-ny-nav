    animation: motion 40s linear infinite;
  }

  .motion {
    display: flex;
    flex-wrap: nowrap;
    list-style: none;
    align-items: center;
    padding: 0;
    margin: 0;
  }

  .motion li {
    display: inline-block;
    padding-right: 350px;
    white-space: nowrap;
  }

  @keyframes motion {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>
